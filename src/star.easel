pub fn star.Star(radius=1, pos=@(Random * BoundaryRadius * PickRandom([1,-1]), Random * BoundaryRadius * PickRandom([1,-1]))) {
    use body=star
    use color=Random.BlendHue(#1d3f90, #cc7c20).Darken(0.9)
    
    Body(
        pos=,
        velocity=@(0,0.5),
    )

    on Paint {
        Spark(color=#222222, luminous=1, layer=-40, radius=Random*Random)
    }
    
    DespawnOutsideBoundary
}