pub fn starfield.Starfield {
    use body=starfield

    Body(
        pos=@(0,0),
    )

    repeat 15 {
        Spawn star {
            Star
        }
    }

    with Tick(3s) {
        Spawn star {
            Star(pos=@(Random * BoundaryRadius * PickRandom([1,-1]), -BoundaryRadius-1))
        }
    }

}