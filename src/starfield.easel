pub fn starfield.Starfield {
    use body=starfield
    use radius=1
    use layer=-5
    
    const count = RandomRange(20, 30)
    
    Body(pos=@(0,0))

    repeat count {
        Spawn star { Star }
    }
    
    with Tick(3s) {
        Spawn star { Star(pos=RandomSpawnTopPos(radius=2)) }
    }
}
